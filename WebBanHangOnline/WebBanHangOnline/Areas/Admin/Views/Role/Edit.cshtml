@{
    ViewBag.Title = "Chỉnh Sửa Quyền";
}

@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Role", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Id) <!-- Cực kỳ quan trọng khi edit: phải giữ id lại -->

                <div class="form-group">
                    <label>Tên quyền</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                    <a href="/admin/role/" class="btn btn-warning">Quay Lại</a>
                </div>
            }
        </div>
        <div class="card-footer">
        </div>
    </div>
</section>
